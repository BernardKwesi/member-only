extends layout 

block content
 div.container-fluid
     
  div(class='row vertical-center')
    form(action="" method="POST" class="col-xs-8 col-xs-offset-2  col-sm-6 col-sm-offset-3 col-md-4 col-sm-offset-4 col-lg-2 col-lg-offset-5")
        h1=title
        div
            label(for="username" )  Email: 
            input(class="form-control" type="email" placeholder="Email Address"  autofocus=true name='username' required=true )
